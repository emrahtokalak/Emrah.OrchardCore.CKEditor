    <PackageReference Include="OrchardCore.DisplayManagement" Version="1.8.2" />
    <PackageReference Include="OrchardCore.Indexing.Abstractions" Version="1.8.2" />
    <PackageReference Include="OrchardCore.Search.Lucene" Version="1.8.2" />
    <PackageReference Include="OrchardCore.Navigation" Version="1.8.2" />
    <PackageReference Include="OrchardCore.Queries.Abstractions" Version="1.8.2" />
    <PackageReference Include="OrchardCore.ResourceManagement" Version="1.8.2" />
    <PackageReference Include="OrchardCore.Module.Targets" Version="1.8.2" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

</Project>
