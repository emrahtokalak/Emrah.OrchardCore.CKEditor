    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.8.0</Version>
    <PackageId>Emrah.OrchardCore.CKEditor</PackageId>
    <Title>CKEditor for OrchadCore</Title>
    <Authors>Emrah Tokalak</Authors>
    <Description>CKEditor implementation of OrchardCore</Description>
    <PackageTags>orchardcore;ckeditor</PackageTags>
    <RepositoryUrl>https://github.com/emrahtokalak/Emrah.OrchardCore.CKEditor</RepositoryUrl>
    <PackageProjectUrl>https://github.com/emrahtokalak/Emrah.OrchardCore.CKEditor</PackageProjectUrl>
